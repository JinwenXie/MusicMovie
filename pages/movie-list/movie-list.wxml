<import src="movie-container/movie-container.wxml" />

<template name="movieList">
    <view class="category-container">
        <view class="category-title">
            <text class="category-name">{{ BeiJingMovie.categorytitle }}热映</text>
            <text class="more">更多></text>
        </view>
        <view class="movie-list">
            <block wx:for="{{ BeiJingMovie.movies }}" wx:key="index" wx:for-item="movie">
                <template is="movieContainer" data="{{...movie}}"></template>
            </block>
        </view>
    </view>
</template>